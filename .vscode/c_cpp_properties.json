{
    "version": 4,
    "configurations": [
        {
            "name": "GCC",
            "includePath": [
                "/usr/include",
                "${workspaceFolder}/**"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/gcc",  // Path to GCC (adjust based on your system)
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64", // Use GCC for IntelliSense
            "browse": {
                "path": [
                    "/usr/include",
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ]
}